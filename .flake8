[flake8]
max-line-length = 88
extend-ignore = E203, W503, E501
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    venv,
    env,
    .venv,
    .env,
    migrations,
    tests,
    node_modules
per-file-ignores =
    __init__.py:F401
    migrations/*:E501
max-complexity = 10
select = C,E,F,W,B,B950
ignore = E203,W503
